{
    "name": "roberfelix/buscador-cursos",
    "description": "Buscador projeto que busca os cursos no site da alura",
    "type": "library",
    "autoload": {
        "files":["./functions.php"],
        "psr-4": {
            "Rober\\BuscadorDeCursos\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Rober Felix",
            "email": "robervaldo.felix@hotmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.4",
        "symfony/dom-crawler": "^4.2",
        "symfony/css-selector": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "9",
        "squizlabs/php_codesniffer": "^3.6",
        "phan/phan": "^5.3"
    },
    "scripts": {
        "test":  "phpunit curso-busca.php",
        "cs":  "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser",
        "exib-cursos": "Rober\\BuscadorDeCursos::metodo",
        "check":[
                "@phan",
                "@cs",
                "@test"
        ],
        "post-update-cmd":[
            "@test"
        ]
    },  
    "scripts-descriptions":{
        "check": "Roda as verificações do código, phan,cs,phpunit"
    }
}
